# needed to make java apps play nice with tiling wm
export _JAVA_AWT_WM_NONREPARENTING=1

prompts=(🍏 🍎 🍐 🍊 🍋 🍌 🍉 🍇 🍓 🫐 🍈 🍒 🥭 🍍 🥥 🥝 🍅 🍆 🥑 🥦 🥬 🥒 🫑 🌽 🥕 🫒 🧄)
size=${#prompts[@]}
index=$(($RANDOM % $size))
prompt=${prompts[$index]}
PROMPT_COMMAND='echo -ne "\033]0;$(whoami)@$(hostname):$(pwd) ${prompt}\007"'
PS1="${prompt} "
